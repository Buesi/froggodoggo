<%= form_with model: @company, local: true do |form| %>

  <div class="flex-container-10">
    <div class="flex-container-9-4">
      <div class="flex-container-12-1">

        <h2>Create a new company</h2>
        <div class="flex-container-form-column">

          <%= form.fields_for :user do |user_field| %>
            <p><strong>Name:</strong></p>
            <p><%= user_field.text_field :name, :class => "form-field"%></p>

            <p><strong>Surname:</strong></p>
            <p><%= user_field.text_field :surname, :class => "form-field" %></p>

            <p><strong>E-mail:</strong></p>
            <p><%= user_field.text_field :email, :class => "form-field"%></p> 

            <p><strong>Auth0 Id:</strong></p>
            <p><%= user_field.text_field :auth0_id, :class => "form-field"%></p>  

            <p><strong>Profile picture:</strong></p>
            <p><%= user_field.text_field :profile_picture_id, :class => "form-field"%></p>                    

          <% end %>
        </div>

      </div>
    </div>
  </div>

  <p>
    <%= form.submit 'Save', :class => 'button' %>
  </p> 

<% end %>