<h1>Listing companies</h1>
<%= link_to 'New company', new_company_path %> 

<table>

  <tr>
    <th>Name</th>
    <th>Surname</th>
    <th>Email</th>
    <th>Password</th>
    <th>Role</th>
    <th>Company</th>
    <th>Website</th>
    <th></th>
  </tr>
 
  <% @companies.each do |company| %>
    <tr>
      <td><%= company.user.name %></td>
      <td><%= company.user.surname %></td>
      <td><%= company.user.email %></td>
      <td><%= company.user.password %></td>
      <td><%= company.user.role %></td>
      <td><%= company.company %></td>
      <td><%= company.website %></td>
      <td><%= link_to 'Show', company_path(company) %></td>
      <td><%= link_to 'Edit', edit_company_path(company) %></td>
      <td><%= link_to 'Destroy', company_path(company), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>

</table>