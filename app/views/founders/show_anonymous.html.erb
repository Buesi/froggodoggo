<h1>Founder</h1>

<p>
  <strong>role:</strong>
  <%= @founder.user.role %>
</p>

<p>
  <strong>member since:</strong>
  <%= @founder.user.created_at %>
</p>

<%= form_with(url: "/contacts/create", method: "post") do %>
  <%= hidden_field_tag("contact[company_id]", @company_id) %>
  <%= hidden_field_tag("contact[founder_id]", @founder.id) %>

  <p>
    <%= submit_tag("Contact") %>
  </p> 

<% end %>


